<%- include('../partials/header.ejs'); %>

    <!-- MAIN CONTENT -->
    <div class="container">
      <div class="row">
        <div class="col-md-offset-1 col-md-10">
          <h3>Favourite Books List </h3>
          <!-- ------------------------ -->
          <!-- FIXED   THE ADD BUTTON BELOW -->
          <!-- ------------------------ -->
          <a href="/books/add" class="btn btn-primary" style="margin-bottom: 5px;"> <i class="fa fa-plus"></i> Add a book</a>
          <br>
            <table class="table table-bordered table-striped table-hover">
              <thead>
                <tr class="table-dark">
                  <th class="text-center col-4">Title</th>
                  <th class="text-center col-1">Price</th>
                  <th class="text-center col-2">Author</th>
                  <th class="text-center col-3">Genre</th>
                  <th class="text-center col-1"></th>
                  <th class="text-center col-1"></th>
                </tr>
                </thead>
                <tbody>
                <!-- Template Row -->
                <% for (let count = 0; count < books.length; count++) { %>
                <tr>
                  <td class="text-center col-4"><%= books[count].Title %></td>
                  <td class="text-center col-1">$<%= books[count].Price %></td>
                  <td class="text-center col-2"><%= books[count].Author %></td>
                  <td class="text-center col-3"><%= books[count].Genre %></td>

                  <td class="text-center col-1">
                    <a href="/books/edit/<%= books[count]._id %>" class="btn btn-primary btn-sm">
                      <i class="fas fa-pencil-alt"></i> Edit
                    </a>
                  </td>

                  <td class="text-center col-1">
                    <a href="/books/delete/<%= books[count]._id %>" class="btn btn-danger btn-sm">
                      <i class="fas fa-trash-alt"></i> Delete
                    </a>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
           <div class="col-md-offset-1 col-md-10 text-center">
            <ul class="pagination pagination-lg pager" id="myPager"></ul>
          </div>
        </div>
      </div>
    </div>

<%- include('../partials/footer.ejs'); %>


